		<td rowspan="2" id="acc_classement">
		<h3 style="color:#00774B;">Les 15 premiers du classement</h3>
<?php
	$html='';
	$s_parieurs="SELECT id_user, login, nom_reel, date_in, classement, points FROM users 
			WHERE actif=1 
			ORDER BY classement, date_in DESC, login LIMIT 15";
	$r_parieurs=mysql_query($s_parieurs);
	if (mysql_num_rows($r_parieurs)) {
		$html='<ul COMPACT>';
		
		while ($d_parieurs=mysql_fetch_array($r_parieurs)) {
			switch($d_parieurs['classement']) {
				case 1:
					$puce='<img src="public/images/icons/concours.png" alt="'.$d_parieurs['classement'].'">';
				break;
				case 2:
					$puce='<img src="public/images/icons/medal_silver_2.png" alt="'.$d_parieurs['classement'].'">';
				break;
				case 3:
					$puce='<img src="public/images/icons/medal_bronze_3.png alt="'.$d_parieurs['classement'].'">';
				break;
				case 10000:
					$puce=' - ';
				break;
				default:
					$puce=$d_parieurs['classement'].' - ';
			}
			$html.='<li title="'.$d_parieurs['nom_reel'].'">'.$puce.' '.htmlentities($d_parieurs['login'],ENT_QUOTES,'UTF-8').' ('.$d_parieurs['date_in'].')</li>';
		}
		$html.='</ul>';
	} else {
		$html.='<p style="text-align:center;">Aucun utilisateur actif.</p>';
	}
	echo $html;
	?>
		
		<div style="text-align:center"><a href="#" onClick="affElement('concours','','','','page');">Accéder au classement complet</a></div>
		<br/>
		<h3 style="color:#00774B;">Classement par groupe</h3>
	<?php
	$s_groupes="SELECT G.id_groupe, G.nom, G.description, U.login FROM groupes G 
		INNER JOIN users U
			ON G.id_owner=U.id_user
		WHERE G.actif=1";
	$r_groupes=mysql_query($s_groupes);
	$html='';
	if (mysql_num_rows($r_groupes)) {
		$html='<ul>';
		while ($d_groupes=mysql_fetch_array($r_groupes)) {
			$html.='<li title="'.$d_groupes['description'].' - géré par '.$d_groupes['login'].'"
			onclick="affElement(\'concours\',\'par_groupe\',\''.$d_groupes['id_groupe'].'\',\'\',\'page\');" 
			style="cursor:pointer; font-weight:bold;">'.htmlentities($d_groupes['nom'],ENT_QUOTES,'UTF-8').'</li>';
		}
		$html.='</ul>';
	} else {
		$html.='<p style="text-align:center;">Aucun groupe actif.</p>';
	}
	echo $html;
	?>
		</td>
	</tr>
	<tr>
		<td id="infos_matchs">
		<h3>Derniers matchs joués</h3>
<?php
$s_matchs="SELECT M.id_match, M.date_match, M.heure, EQ1.nom AS eq1, EQ2.nom AS eq2, EQ1.acronym AS acro1, EQ2.acronym AS acro2, 
				M.score1, M.score2, M.score1-M.score2 AS diff
				FROM matchs M
				INNER JOIN equipes EQ1 
					ON M.id_equipe1=EQ1.id_equipe
				INNER JOIN equipes EQ2 
					ON M.id_equipe2=EQ2.id_equipe
				WHERE joue=1
				ORDER BY M.date_match, M.heure
				LIMIT 5";

$r_matchs=mysql_query($s_matchs);
$html='<ul>';
if (mysql_num_rows($r_matchs)>0) {
	while ($d_matchs=mysql_fetch_array($r_matchs)) {
		$win1=($d_matchs['diff']>0)?'<img src="public/images/'.$d_matchs['acro1'].'.gif"> <strong>'.$d_matchs['eq1'].'</strong>':'<img src="public/images/'.$d_matchs['acro1'].'.gif"> '.$d_matchs['eq1'];
		$win2=($d_matchs['diff']<0)?'<strong>'.$d_matchs['eq2'].'</strong> <img src="public/images/'.$d_matchs['acro2'].'.gif">':$d_matchs['eq2'].' <img src="public/images/'.$d_matchs['acro2'].'.gif">';
		$html.='<li>
			<span class="date">'.$d_matchs['date_match'].' '.$d_matchs['heure'].'</span><br/> '.
			$win1.' '.$d_matchs['score1'].'-'.$d_matchs['score2'].' '.$win2.'</li>';
	}
} else {
	$html.='<li>Aucun match n\'a encore été joué.</li>';
}
$html.='</ul>';
echo $html;		
?>
<div style="margin:auto;width:200px;">
	<a href="#" onClick="affElement('resultats','','','','page');">Tous les résultats</a>
</div>
<br/>
		<h3>Prochains matchs</h3>
<?php
$s_matchs="SELECT M.id_match, M.date_match, M.heure, 
				EQ1.acronym AS acro1, EQ1.nom AS eq1, EQ2.acronym AS acro2, EQ2.nom AS eq2, M.score1, M.score2, 
				M.joue, M.cote_1, M.cote_N, M.cote_2
				FROM matchs M
				INNER JOIN equipes EQ1 
					ON M.id_equipe1=EQ1.id_equipe
				INNER JOIN equipes EQ2 
					ON M.id_equipe2=EQ2.id_equipe
				WHERE joue<>1
				ORDER BY M.date_match, M.heure
				LIMIT 4";
$r_matchs=mysql_query($s_matchs);
$html='<ul>';
while ($d_matchs=mysql_fetch_array($r_matchs)) {
	$html.='<li>';
	$html.='<span class="date">'.$d_matchs['date_match'].' '.$d_matchs['heure'].'</span><br/><img src="public/images/'.$d_matchs['acro1'].'.gif"> '.$d_matchs['eq1'].'
		'.$d_matchs['cote_1'].'/'.$d_matchs['cote_N'].'/'.$d_matchs['cote_2'].' '.$d_matchs['eq2'].' <img src="public/images/'.$d_matchs['acro2'].'.gif">' ;
	$html.='</li>';
}
$html.='</ul>';
echo $html;		
?>
		</td>
		<td id="infos_rss">
		<h3>Infos sur le tournoi</h3>
		<?php
		echo '<a href="http://fr.uefa.com"><h4>News de l\'UEFA</h4></a>'.lire_rss("http://fr.uefa.com/rssfeed/uefaeuro2012/rss.xml",4) ;
		echo '<a href="http://www.cahiersdufootball.net/"><h4>Les Cahiers du Football</h4></a>'.lire_rss("http://www.cahiersdufootball.net/rss/rss_article.php",3) ;
		echo '<a href="http://www.lequipe.fr/Football/"><h4>L\'Équipe</h4></a>'.lire_rss("http://www.lequipe.fr/Xml/Football/Titres/actu_rss.xml",4) ;
		echo '<a href="http://www.football365.fr/"><h4>Football365</h4></a>'.lire_rss("http://www.football365.fr/euro-2012/rss.xml",4) ;
		
		?>
